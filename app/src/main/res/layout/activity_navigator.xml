<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center_vertical"
    android:background="@drawable/ll_bg_navigator">

        <ImageView
            android:id="@+id/iv_nag_home"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:src="@drawable/ic_nag_star"
            >
        </ImageView>

        <ImageView
            android:id="@+id/iv_nag_search"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:src="@drawable/ic_nag_search"
            >
        </ImageView>

        <ImageView
            android:id="@+id/iv_nag_comment"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/ic_nag_reply"
            >
        </ImageView>

        <ImageView
            android:id="@+id/iv_nag_my"
            android:layout_width="0dp"
            android:layout_height="37dp"
            android:layout_weight="1"
            android:src="@drawable/ic_nag_me"
            >
        </ImageView>

</LinearLayout>