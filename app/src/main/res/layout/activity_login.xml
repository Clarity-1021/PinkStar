<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PinkStar"
            android:textSize="30dp"
            android:textColor="@color/colorWhite"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lv_login_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/et_account"
            android:layout_width="333dp"
            android:layout_height="wrap_content"
            android:background="@drawable/et_bg_round_lg"
            android:layout_gravity="center"
            android:hint="账号/学号邮箱"
            android:inputType="text"
            android:lines="1"
            android:layout_marginBottom="8dp"
            />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="333dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:lines="1"
            android:inputType="textPassword"
            android:background="@drawable/et_bg_round_lg"
            android:hint="密码"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lv_login_btn"
        android:layout_below="@id/lv_login_input"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="18dp"
        android:orientation="horizontal"
        >

        <Button
            android:layout_gravity="center"
            android:id="@+id/btn_login"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg_round_lg"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:gravity="center_horizontal"
            android:text="登录"
            />

        <Button
            android:layout_gravity="center"
            android:id="@+id/btn_reg"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_round_reg"
            android:textColor="@color/colorPrimary"
            android:textSize="16dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_horizontal"
            android:text="注册"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/lv_login_input"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_logo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lv_login_btn"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp"
        >

        <ImageView
            android:id="@+id/iv_qq"
            android:layout_width="50dp"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/qq_logo_sm"
            />

        <ImageView
            android:id="@+id/iv_wc"
            android:layout_width="50dp"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/wei_chat_logo_sm"
            />

    </LinearLayout>



</RelativeLayout>